<?xml version="1.0"?>
<?xml-stylesheet type='text/xsl' href='interface.xsl'?>
<interface xmlns="http://zero-install.sourceforge.net/2004/injector/interface" uri="http://gfxmonk.net/dist/0install/net-sandbox.xml" xmlns:compile="http://zero-install.sourceforge.net/2006/namespaces/0compile">
	<name>net-sandbox</name>
	<summary>sandbox a process inside a new network namespace</summary>
	<description>
sandbox a process inside a new network namespace
	</description>

	<group arch="*-src" compile:dup-src="true" compile:min-version="0.23">
		<command name="compile" shell-command="cd &quot;$BUILDDIR&quot; &amp;&amp; waf all">
			<requires interface="http://gfxmonk.net/dist/0install/python-devel.xml"/>
			<compile:implementation>
				<environment insert="lib/python" mode="prepend" name="PYTHONPATH"/>
				<environment insert="bin" mode="prepend" name="PATH"/>
				<requires interface="http://gfxmonk.net/dist/0install/python-unshare.xml"/>
				<requires interface="http://gfxmonk.net/dist/0install/selective-chroot.xml"/>
				<command name="run" path="lib/python/net_sandbox.py">
					<runner interface="http://repo.roscidus.com/python/python">
						<version before="3"/>
					</runner>
				</command>
			</compile:implementation>
		</command>
		<implementation id="." version="0.1.2"/>
	</group>
</interface>
